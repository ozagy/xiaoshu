<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <%= yield :css %>
  <title>XiaoShu</title>
</head>
<body>
  <header class="navbar navbar-static-top" id="top-nav">
    <div id="navbar-container" class="container-fluid">
      <div class="navbar-header">
        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#xs-navbar" aria-controls="xs-navbar" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%=link_to image_tag("xiaoshulogo.png" ,:id => "xs-logo", :alt => "XiaoShu logo"), '/', :class => 'navbar-brand' %>
      </div>
      <nav id="xs-navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%=link_to 'HOME', '/', :class => (check_page 'home') %>
          </li>
          <li>
            <%=link_to 'ABOUT', 'about', :id => 'nav-about', :class => (check_page 'about') %>
          </li>
          <li>
            <%=link_to 'PROGRAM', 'program', :id => 'nav-program', :class => (check_page 'program') %>
          </li>
          <li>
            <%=link_to 'JOIN US', 'join', :id => 'nav-join', :class => (check_page 'join') %>
          </li>
          <li>
            <%=link_to 'CONTACT', 'contact', :id => 'nav-contact', :class => (check_page 'contact') %>
          </li>
        </ul>
      </nav>
    </div>
  </header>
<%= yield %>
  <footer id="footer">
    <div class="container">
      <div id="stay-connected" class="col-xs-12 col-md-3">STAY CONNECTED</div>
      <div id="wechat" class="social-media col-xs-12 col-md-3"><%= image_tag("wechat.png",:id => "wechat-logo", :class => 'social-logo') %> WeChat</div>
      <div id="weibo" class="social-media col-xs-12 col-md-3"><%= image_tag("weibo.png",:id => "weibo-logo", :class => 'social-logo') %> Weibo</div>
      <div id="facebook" class="social-media col-xs-12 col-md-3"><%= image_tag("fb.png",:id => "fb-logo", :class => 'social-logo') %> Facebook</div>
      <div id="credit" class="col-xs-12">Â©2015 XiaoShu | Designed & Developed by <a href="http://www.chenbinyan.com">Binyan Chen</a></div>
    </div>  
  </footer>

<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<script type="text/javascript">
$(document).ready(function(){
  $('.full-height').height($(window).height()*0.95);
  $.stellar({horizontalScrolling:false,verticalOffset:40});
  
  $(window).scroll(function(){
    //console.log($(document).scrollTop());
    if ($(document).scrollTop()>0)
    {
      $("#scrolldown").fadeOut();
    }
    else{
      $("#scrolldown").fadeIn();
    }
  });
  $('.gallery-photo').each(function(i,obj){
    var image_str = $(this).attr('image');
    var image_url = $("#"+image_str).attr('src');
    console.log(image_url);
    $(this).css('background-image', 'url('+image_url+')');
  });
});
</script>

</body>
</html>
